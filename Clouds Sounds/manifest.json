{
  "name": "__MSG_name__",
  "short_name": "__MSG_shortname__",
  "description": "__MSG_desc__",
  "default_locale": "ru",
  "version": "2019.10.10.1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "webNavigation",
    "*://soundcloud.com/*",
    "*://api.soundcloud.com/*"
  ],
  "icons": {
    "16": "./icon/icon16.png",
    "32": "./icon/icon32.png",
    "64": "./icon/icon64.png",
    "128": "./icon/icon128.png"
  },
  "background": {
    "scripts": [
      "./js/vendor.js",
      "./js/background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "page_action": {}
}